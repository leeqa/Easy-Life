<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.BudgetManager.DetailBudget.RavenueFragment.RavenueFragment">

    <TextView
        android:id="@+id/ravenue_fragment_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:padding="10dp"
        android:text="Current:-"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ravenue_current_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ravenue_fragment_total"
        android:padding="10dp"
        android:text="amount"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/ravenue_fragment_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ravenue_current_amount"
        android:padding="10dp">

    </ListView>


    <ProgressBar
        android:id="@+id/ravenue_received_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ravenue_received_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/oxygen"
        android:text="Nothing to show"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>