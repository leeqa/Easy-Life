<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Main.PrayerReminder.Alarm.PrayerAlarmActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">





            <ImageView
                android:id="@+id/prayer_alarm_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_remove_blue"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/prayerAnimation"
                android:layout_below="@id/txt"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/splash_prayer"
                />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="NAMAZ TIME"
                android:textColor="@color/purple_500"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/round_font"/>
            <TextView
                android:id="@+id/belowtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prayerAnimation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Its Time for PRAYER"
                android:textColor="@color/purple_500"
                android:textSize="30dp"
                android:fontFamily="@font/round_font"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
